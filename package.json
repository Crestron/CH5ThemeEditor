{
    "name": "@crestron/ch5-theme", 
    "version": "2.3.0", 
    "description": "Crestron HTML5 (CH5) Themes CSS", 
    "author": "Crestron", 
    "license": "SEE LICENSE IN LICENSE.txt", 
    "main": "index.js", 
    "files": [
        "LICENSE.txt", 
        "output/themes/**theme.css"
    ], 
    "repository": {
        "url": "https://github.com/Crestron/CH5ThemeEditor.git", 
        "type": "git"
    }, 
    "keywords": [
        "ch5", 
        "Theme"
    ], 
    "scripts": {
        "bundle-theme": "node ./bundle-theme.js", 
        "bundle-theme-for-showcase": "webpack --config webpack.run.js --outputpath='../CH5ShowcaseApp/static/crestron-components-assets' && npm run cleanjs", 
        "bundle-theme-all": "webpack --config webpack.build.js --outputpath='./output/themes' && npm run cleanjs", 
        "bundle-and-watch": "npm run clean && webpack --config webpack.run.js --watch", 
        "bundle-theme-all-app-compile": "webpack --config webpack.compile.js && npm run cleanjs", 
        "bundle-theme-all-dev": "webpack --config webpack.build.js --mode development && npm run cleanjs", 
        "clean": "rimraf output", 
        "cleanjs": "rimraf output/**/*.js", 
        "create-theme": "node ./create-theme.js", 
        "gen:icon-library": "node ./helpers/icon-library.js --writeTo ./generated-metadata/icon-library.json", 
        "gen:sass-json-output": "ts-node ./sass-schema/index.ts --writeTo ./generated-metadata/sass-output.json", 
        "gen:sass-json": "ts-node ./sass-schema/index.ts --writeTo ../CH5ComponentLibrary/src/_interfaces/generated-metadata/sass-output.json", 
        "gen:sass-metadata": "node ./metadata-generator.js --writetofilepath ./generated-metadata/sass-schema.json", 
        "start": "webpack --config webpack.run.js --watchmode && npm run cleanjs && webpack --config app.config.dev.js", 
        "sass-converter": "ts-node index.ts"
    }, 
    "dependencies": {
        "@fortawesome/fontawesome-free": "^6.3.0", 
        "@material-icons/font": "^1.0.20", 
        "sassdoc": "^2.7.1"
    }, 
    "devDependencies": {
        "style-loader": "^0.23.1", 
        "browser-sync-webpack-plugin": "^2.2.2", 
        "copy-webpack-plugin": "^5.0.3", 
        "webpack-merge": "^4.2.1", 
        "sass-flatten": "^0.1.1", 
        "@crestron/ch5-crcomlib": "^2.3.0", 
        "sass-loader": "^7.1.0", 
        "ts-node": "^10.2.1", 
        "terser-webpack-plugin": "^1.3.0", 
        "css-simple-parser": "^2.0.1", 
        "nouislider": "^13.1.5", 
        "html-webpack-plugin": "^3.2.0", 
        "webpack": "^4.39.2", 
        "browser-sync": "^2.26.7", 
        "dotenv": "^8.0.0", 
        "webpack-cli": "^3.3.4", 
        "typescript": "^4.3.5", 
        "css-loader": "^3.0.0", 
        "glob": "^7.1.4", 
        "puppeteer": "^10.1.0", 
        "webpack-merge-and-include-globally": "^2.1.16", 
        "rimraf": "^2.6.3", 
        "path": "^0.12.7", 
        "image-webpack-loader": "^5.0.0", 
        "webpack-clean": "^1.2.3", 
        "mini-css-extract-plugin": "^0.7.0", 
        "jsonfile": "^6.1.0", 
        "lodash": "^4.17.15", 
        "sass": "^1.44.0", 
        "@types/puppeteer": "^5.4.4", 
        "write-json-webpack-plugin": "^1.1.0", 
        "install": "^0.12.2", 
        "@types/node": "^16.4.0", 
        "html-loader": "^0.5.5", 
        "optimize-css-assets-webpack-plugin": "^5.0.1"
    }, 
    "resolutions": {
        "**/event-stream": "^4.0.1"
    }
}